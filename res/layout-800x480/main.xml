<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <!-- PLUG-IN DONGLE PAGE -->
    
    <LinearLayout android:id="@+id/plugInDongleInfoPage" android:orientation="vertical" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent">
    	
    	<!-- 
    	<TextView android:id="@+id/tgmPlugInDongleHeaderText" android:padding="10dp" android:layout_gravity="center" android:text="@string/tgm_plug_in_dongle_label" android:textSize="48dp"  android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    	-->
    	<ImageView android:src="@drawable/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal"/>
    		
    	<TextView android:id="@+id/tgmPlugInDongleHeaderText" android:padding="10dp" android:textColor="#FFFFFF" android:layout_gravity="center" android:text="@string/tgm_plug_in_dongle_label" android:textSize="24dp"  android:layout_width="wrap_content" android:layout_height="wrap_content" />
    	
    	<FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent" >
    		
    		<ImageView android:id="@+id/tgmPlugInDongleImage" android:layout_gravity="center"  android:src="@drawable/plug_in_dongle" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
    	
    	</FrameLayout>
    	
	</LinearLayout>
    
    
    
    <!-- SIM FAILURE PAGE -->
    
    <LinearLayout android:id="@+id/simFailurePage"  android:orientation="vertical" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent">
    	
    	<ImageView android:src="@drawable/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal"/>
    	
    	<TextView android:id="@+id/tgmSIMFailureHeaderText" android:textColor="#FFFFFF" android:padding="10dp" android:layout_gravity="center" android:text="@string/tgm_sim_failure_label" android:textSize="24dp"  android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    
    </LinearLayout>
    
    
    
    <!-- ENTER PIN PAGE -->
    
    <LinearLayout android:id="@+id/enterPINPage"  android:orientation="vertical" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent">
    	
    	<ImageView android:src="@drawable/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal"/>
    	
    	<TextView android:id="@+id/tgmEnterPINHeaderText" android:padding="10dp" android:layout_gravity="center" android:text="@string/tgm_enter_pin_label" android:textSize="24dp"  android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    
    </LinearLayout>
    
    
    
    <!-- ENTER PUK PAGE -->
    
    <LinearLayout android:id="@+id/enterPUKPage" android:orientation="vertical" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent">
    	
    	<TextView android:id="@+id/tgmEnterPUKHeaderText" android:padding="10dp" android:layout_gravity="center" android:text="@string/tgm_enter_puk_label" android:textSize="48dp"  android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    
    </LinearLayout>
    
    
    
    <!-- DIALER PAGE -->
    
    <LinearLayout android:id="@+id/dialerPage" android:visibility="gone" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
    	
    	<ImageView android:src="@drawable/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:padding="10dp"/>
    	
    	<!--  
    	<LinearLayout android:orientation="vertical" android:padding="5dp" android:layout_width="fill_parent" android:layout_height="100dp">
    	
    		<ImageView android:src="@drawable/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal"/>
    		<TextView android:id="@+id/tgmHeaderText" android:text="@string/tgm_header_label" android:textSize="48dp"  android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    		
		</LinearLayout>
		-->
		
		<LinearLayout android:orientation="vertical" android:padding = "5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center">
    	
 			<TextView android:id="@+id/carrierText" android:text="@string/tgm_carrier_label" android:textSize="28dp"  android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
 		
 			<TextView android:id="@+id/dongleModelText" android:text="@string/tgm_modem_model_label" android:textSize="28dp"  android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
 		
 			<TextView android:id="@+id/apnSettingText" android:visibility="gone" android:text="@string/tgm_apn_setting_label" android:textSize="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
 		
		</LinearLayout>
		
		
		<ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:src="@drawable/line" android:padding="5dp"></ImageView>
    	
    	<TextView android:id="@+id/dialInfoText" android:text="@string/tgm_dial_info_text" android:layout_gravity="center" android:textSize="18dp" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    	
    	<ImageButton android:id="@+id/dialBtn" android:padding="0dp" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/dial"></ImageButton>
		
		
		<!--  
		<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent">
		
			<FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_gravity="right">
				<Button android:text="@string/tgm_dial_btn_text" android:id="@+id/dialBtn" android:layout_width="100dp" android:layout_height="50dp" android:layout_gravity="right|center_vertical"/>
			</FrameLayout>
		
		</LinearLayout>
		-->
		
    </LinearLayout>
    
    
    
    <!-- CONNECTION INFO PAGE -->
    
    <LinearLayout android:id="@+id/connectionInfoPage" android:orientation="vertical" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent">
    	
    	<ImageView android:src="@drawable/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:padding="10dp"/>
    	
    	<!--
    	
    	<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="100dip" android:padding="5dp">
    	
    		
    		
    		<TextView android:text="@string/tgm_connection_established_label" android:padding="10dp" android:textSize="48dip" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    		
		</LinearLayout>
		
		-->
		  
		<LinearLayout android:orientation="vertical" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center">
    	
   			<TextView android:id="@+id/connectionInfoCarrierText" android:text="@string/tgm_carrier_label" android:textSize="28dp"  android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
   		
   			<TextView android:id="@+id/connectionInfoDongleModelText" android:text="@string/tgm_modem_model_label" android:textSize="28dp"  android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    		
		</LinearLayout>
		
		<ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:src="@drawable/line" android:padding="5dp"></ImageView>
		
		<TextView android:id="@+id/connectionSuccessText" android:text="@string/tgm_connection_success_text" android:textSize="18dp"  android:layout_width="fill_parent" android:padding="5dp" android:layout_height="wrap_content" android:layout_gravity="center" android:singleLine="false" android:gravity="center"></TextView>
		
		<ImageView android:id="@+id/dialer_connection_icon" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/connect_ok"></ImageView>
				
		<TextView android:id="@+id/connectionTimeText" android:visibility="visible" android:text="@string/tgm_connection_time_label" android:textSize="18dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center"></TextView>
		
		<!--  
		<LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:padding="2dp">
    	
   			<TextView android:id="@+id/connectionTimeText" android:visibility="visible" android:text="@string/tgm_connection_time_label" android:textSize="18dp" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
   		
   			<TextView android:id="@+id/networkFlowText" android:text="@string/tgm_network_flow_label" android:visibility="gone" android:textSize="24dp"  android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    		
		</LinearLayout>
		
		-->
		
		<RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:padding="5dp">
		
			<!--  <Button android:id="@+id/disconnectBtn" android:text="@string/tgm_disconnect_btn_text"  android:layout_width="100dip" android:layout_height="50dip" android:layout_gravity="center"/>-->
		
			<ImageButton android:id="@+id/disconnectBtn" android:padding="0dp" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/disconnect" android:layout_centerHorizontal="true" android:layout_centerInParent="true"></ImageButton>
		
			<TextView android:id="@+id/disconnect_info_label_left"  android:text="@string/tgm_disconnect_info_text_left" android:textSize="18dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/disconnectBtn" android:layout_centerVertical="true" android:visibility="gone"></TextView>
			
			<TextView android:id="@+id/disconnect_info_label_right"  android:text="@string/tgm_disconnect_info_text_right" android:textSize="18dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:visibility="gone"></TextView>
		
		</RelativeLayout>
		
		<!--  
		<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_gravity="center" android:padding="2dp">
			
			<LinearLayout android:orientation="vertical" android:layout_width="300dp" android:layout_height="wrap_content">
			
				<ImageView android:id="@+id/dialer_connection_icon" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/connect_ok"></ImageView>
				
				<TextView android:id="@+id/connectionTimeText" android:visibility="visible" android:text="@string/tgm_connection_time_label" android:textSize="18dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center"></TextView>
			
			</LinearLayout>
			
			<LinearLayout android:orientation="vertical" android:layout_width="500dp" android:layout_height="wrap_content">
				
				<RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:padding="5dp">
		
					<Button android:id="@+id/disconnectBtn" android:text="@string/tgm_disconnect_btn_text"  android:layout_width="100dip" android:layout_height="50dip" android:layout_gravity="center"/>
				
					<ImageButton android:id="@+id/disconnectBtn" android:padding="0dp" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/disconnect" android:layout_centerHorizontal="true" android:layout_centerInParent="true"></ImageButton>
				
					<TextView android:id="@+id/disconnect_info_label_left"  android:text="@string/tgm_disconnect_info_text_left" android:textSize="18dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/disconnectBtn" android:layout_centerVertical="true"></TextView>
					
					<TextView android:id="@+id/disconnect_info_label_right"  android:text="@string/tgm_disconnect_info_text_right" android:textSize="18dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"></TextView>
				
				</RelativeLayout>
				
			</LinearLayout>			
		
		</LinearLayout>
		
		-->
		
	</LinearLayout>
	
	<!-- AIR PLANE MODE PAGE -->
    
    <LinearLayout android:id="@+id/airPlaneModePage" android:visibility="gone" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
    	
    	<ImageView android:src="@drawable/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:padding="10dp"/>
    	
    	
		<TextView android:id="@+id/airPlaneModeText" android:textColor="#FFFFFF" android:padding="10dp" android:layout_gravity="center" android:text="@string/tgm_air_plane_mode_text" android:textSize="24dp"  android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		
    </LinearLayout>
	
	
	<!-- ABOUT US PAGE -->
    
    <LinearLayout android:id="@+id/aboutUsPage" android:orientation="vertical" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent" android:paddingRight="20dp">
    	
    	<ImageView android:src="@drawable/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:padding="10dp"/>
    	
    	<TextView android:paddingLeft="40dp" android:visibility="visible" android:text="@string/tgm_about_us_version_text" android:textColor="#FFFFFF" android:textSize="24dp" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    	
    	<TextView android:paddingLeft="40dp" android:visibility="visible" android:text="@string/tgm_about_us_provider_text" android:textColor="#FFFFFF" android:textSize="24dp" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    	
    	<TextView android:paddingLeft="40dp" android:paddingTop="20dp" android:visibility="visible" android:text="@string/tgm_about_us_description_text" android:textSize="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    	
    	<TextView android:paddingLeft="40dp" android:paddingTop="20dp" android:visibility="visible" android:text="@string/tgm_about_us_copyright_text" android:textSize="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		
		<TextView android:paddingLeft="40dp" android:paddingTop="20dp" android:visibility="visible" android:text="@string/tgm_about_us_warning_text" android:textSize="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		
		<Button android:id="@+id/leaveAboutUsBtn" android:layout_width="80dp" android:text="@string/tgm_about_us_leave_btn_text" android:layout_height="wrap_content" android:layout_gravity="center"></Button>

	</LinearLayout>
	
 	<TextView android:paddingLeft="10dp" android:layout_gravity="bottom|right" android:textSize="22dp" android:text="@string/tgm_powered_by_camangi" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
 	
</FrameLayout>
